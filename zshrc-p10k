# >>> conda initialize (lazy loading) >>>
# Lazy load conda to speed up shell startup
# Conda will be initialized only when 'conda' command is first used
conda() {
    unfunction conda
    __conda_setup="$('/home/ilham/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
    if [ $? -eq 0 ]; then
        eval "$__conda_setup"
    else
        if [ -f "/home/ilham/miniconda3/etc/profile.d/conda.sh" ]; then
            . "/home/ilham/miniconda3/etc/profile.d/conda.sh"
        else
            export PATH="/home/ilham/miniconda3/bin:$PATH"
        fi
    fi
    unset __conda_setup
    conda "$@"
}
# <<< conda initialize <<<


