# Cache Ruby GEM_HOME to avoid running ruby on every shell startup
if [[ -z "$GEM_HOME" ]] && command -v ruby &>/dev/null; then
    export GEM_HOME="$(ruby -e 'puts Gem.user_dir' 2>/dev/null)"
fi
[[ -n "$GEM_HOME" ]] && export PATH="$PATH:$GEM_HOME/bin"

